<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robotiq_fts300s">

    <xacro:macro name="robotiq_fts300s" params="parent prefix *origin">

        <!-- mount the fts to the robot -->
        <joint name="${prefix}fts_fix" type="fixed" >
            <origin xyz="0 0 -0.00" rpy="0 0 0"/>
            <parent link="${parent}" />
            <child link="${prefix}fts_robotside" />
        </joint>

        <link name="${prefix}fts_robotside">
            <inertial>
                <origin xyz="0 0 0" rpy="0 0 0"/>
                <mass value="0.65"/>
                <inertia ixx="0.000661171875" ixy="0" ixz="0" iyy="0.000661171875" iyz="0" izz="0.00117" />
            </inertial>

            <visual>
                <origin xyz="0 0 0.035851" rpy="${-pi} 0 0" />
                <geometry>
                    <mesh filename="package://robotiq_ft_sensor/meshes/visual/fts300s.stl" scale="0.001 0.001 0.001"/>
                </geometry>
                <material name="black"/>
            </visual>

            <collision>
                <origin xyz="0 0 0.035851" rpy="${-pi} 0 0" />
                <geometry>
                    <mesh filename="package://robotiq_ft_sensor/meshes/collision/fts300s.stl" scale="0.001 0.001 0.001"/>
                </geometry>
            </collision>
        </link>

        <!-- virtual measurement frame -->
        <joint name="${prefix}measurment_joint" type="fixed" >
            <origin xyz="0 0 0.01625" rpy="0 0 0" />
            <parent link="${prefix}fts_robotside" />
            <child link="${prefix}robotiq_force_torque_frame_id" />
        </joint>
        <link name="${prefix}robotiq_force_torque_frame_id"/>

        <!-- toolside frame -->
        <joint name="${prefix}toolside_joint" type="fixed" >
            <origin xyz="0 0 0.03851" rpy="0 0 0" />
            <parent link="${prefix}fts_robotside" />
            <child link="${prefix}fts_toolside" />
        </joint>
        <link name="${prefix}fts_toolside"/>

    </xacro:macro>
</robot>